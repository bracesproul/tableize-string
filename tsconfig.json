{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true
  },
  "include": ["./index.ts",],
  "exclude": ["node_modules", "**/*.js"]
}
